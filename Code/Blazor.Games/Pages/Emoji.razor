@page "/emoji"
@inject EmojiGame emojiGame;

<PageTitle>Emoji Game</PageTitle>

<h1>Emoji Game</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2><button class="btn btn-primary" @onclick="@emojiGame.New">New</button> @emojiGame.Message</h2>
            <Output Value="@emojiGame.Display" Clicked="@emojiGame.Click" />
        </div>
    </div>
</div>